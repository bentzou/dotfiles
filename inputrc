# allow case-insensitive autocomplete
set completion-ignore-case On

# auto-complete using characters coming after the cursor
set skip-completed-text on

# ask before showing more than specified number of items
set completion-query-items 200

# don't show hidden files in autocomplete suggestions
set match-hidden-files off

# list all matches with one tab
set show-all-if-ambiguous on
set show-all-if-unmodified on

# auto-expand commands starting with ! after hitting space
Space: magic-space

# cycle through completions with Shift-Tab
"\e[Z": menu-complete

# cd up and down the current path
"\e\e[A": "cd_up\n"
"\e\e[B": "cd_dn\n"
